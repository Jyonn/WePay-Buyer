<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:padding="10dp"
            android:background="@color/colorPrimary" >
            <ImageView
                android:src="@drawable/return_last_white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <TextView
                android:text="@string/choose_good"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/order_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/shampoo"
                    style="@style/order_tab"
                    android:text="洗发水" />

                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/showergel"
                    style="@style/order_tab"
                    android:text="沐浴露" />
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/salt"
                    style="@style/order_tab"
                    android:text="盐" />

            </RadioGroup>

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/shampoo" />

                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TableRow>
                                    <TextView
                                        android:layout_weight="100"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="洗发水"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                </TableRow>
                            </TableLayout>


                            <TextView
                                android:id="@+id/good_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="海飞丝洗发水 丝质柔滑型男女士去屑止痒洗发水750ml" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:gravity="end"
                                android:text="¥55.80" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>




            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>