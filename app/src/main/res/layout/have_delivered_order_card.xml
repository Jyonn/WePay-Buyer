<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:text="卖家已发货  ">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/delivered_order_img"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/delivered_order_goodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="海飞丝洗发水 丝质柔滑型750ml" />
                <TextView
                    android:id="@+id/delivered_order_goodPrice"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="¥55.80"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/delivered_order_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="end"
                    android:text="共2件商品，合计¥111.6" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right">
            <Button
                android:id="@+id/confirm_receipt_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/confirm_receipt_button"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>